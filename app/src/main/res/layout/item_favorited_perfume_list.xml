<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_16sdp"
    android:background="@drawable/background_perfume_search">

    <ImageView
        android:id="@+id/iv_perfume"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_margin="2dp"
        android:background="@drawable/background_rounded_left"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/perfume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete"
        app:layout_constraintStart_toEndOf="@id/iv_perfume"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_perfume_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Alpha"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/tv_perfume_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="by HMNS Perfume"
            android:textColor="@color/textStarterColor"
            android:textSize="@dimen/_8ssp" />


        <TextView
            android:id="@+id/tv_perfume_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Unisex"
            android:textColor="@color/subtitleText"
            android:textSize="@dimen/_7ssp" />

        <TextView
            android:id="@+id/tv_perfume_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="100ml"
            android:textColor="@color/subtitleText"
            android:textSize="@dimen/_7ssp" />

        <TextView
            android:id="@+id/tv_perfume_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/poppins_regular"
            android:text="Citrus, Green Tea, Calabrian Bergamot"
            android:textColor="@color/primaryColorPink"
            android:textSize="@dimen/_7ssp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_margin="@dimen/_6sdp"
        android:src="@drawable/ic_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primaryColorPink" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_6sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_perfume_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:text="4.9"
            android:textColor="@color/textStarterColor"
            android:textSize="@dimen/_7ssp" />

        <ImageView
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_star"
            app:tint="@color/starYellow" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>